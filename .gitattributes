# Set default behavior for all files
* text=auto eol=lf

# Define specific behavior for C++ files
*.cpp linguist-language=cpp
*.hpp linguist-language=cpp
*.h linguist-language=cpp

# Ignore certain files and directories
build/         export-ignore
*.o             export-ignore
*.a             export-ignore
*.so            export-ignore
*.dll           export-ignore
*.dylib         export-ignore
*.exe           export-ignore
*.out           export-ignore
*.pdb           export-ignore
*.ipch          export-ignore
*.iobj          export-ignore
*.ilk           export-ignore
*.suo           export-ignore
*.ncb           export-ignore
*.sdf           export-ignore
*.opensdf       export-ignore
*.sln.docstates export-ignore
*.sln.cache     export-ignore
*.user          export-ignore

# Set line endings for Windows
*.bat     eol=crlf
*.cmd     eol=crlf
*.ps1     eol=crlf
*.psm1    eol=crlf

# Set line endings for Unix-like systems
*.sh      eol=lf

# Set line endings for Mac OS
*.text    eol=lf

# Set merge strategies for different file types
*.md     merge=union
*.txt    merge=union
*.html   merge=union
*.xml    merge=union
*.css    merge=union
*.js     merge=union
*.json   merge=union
*.yml    merge=union

# Define attributes for Git LFS
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text